{
  "name": "bsdoc",
  "version": "5.0.0-alpha",
  "keywords": [
    "BuckleScript",
    "Odoc-driver",
    "documentation",
    "generation"
  ],
  "author": "Leandro Ostera <leandro@ostera.io>",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "release": {
      "bin": [
        "bsdoc"
      ],
      "includePackages": [
        "root",
        "@opam/odoc"
      ]
    }
  },
  "scripts": {
    "test": "esy x bsdoc --version",
    "doc": "esy dune build @doc"
  },
  "dependencies": {
    "@esy-ocaml/reason": ">= 3.4.0 < 3.5.0",
    "@opam/bos": "*",
    "@opam/cmdliner": "*",
    "@opam/dune": "1.9.0",
    "@opam/fmt": "*",
    "@opam/logs": "*",
    "@opam/odoc": "1.4.0",
    "ocaml": "~4.2.3",
    "refmterr": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "ocaml": "~4.2.3",
    "@opam/odoc": "1.4.0"
  }
}
